{
  "scripts": {
    "start": "electron ./app",
    "dev": "nodemon --exec \"npm start\" -e \"js css html\"",
    "pack": "build --dir",
    "dist": "build",
    "postinstall": "install-app-deps"
  },
  "directories": {
    "app": "./app"
  },
  "build": {
    "appId": "com.aouerfelli.station-timer",
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "category": "Utility"
    }
  },
  "devDependencies": {
    "electron": "^1.4.13",
    "electron-builder": "^10.17.3",
    "nodemon": "^1.11.0"
  }
}
